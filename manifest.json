
{
"manifest_version": 3,
"name": "Tab Audio Recorder",
"version": "1.0",
"description": "Captures tab audio, converts to MP3, and saves locally.",
"permissions": [
"tabCapture",
"offscreen",
"downloads",
"storage",
"activeTab"
],
"action": {
"default_popup": "popup.html",
"default_icon": {
"16": "icons/icon16.png",
"48": "icons/icon48.png",
"128": "icons/icon128.png"
}
},
"background": {
"service_worker": "background.js"
},
"icons": {
"16": "icons/icon16.png",
"48": "icons/icon48.png",
"128": "icons/icon128.png"
}
}

